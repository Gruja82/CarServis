@model CarViewModel

@{
    HashSet<string> customers = new();
    customers = (HashSet<string>)ViewData["Customers"];
    HashSet<string> makes = ViewData["Makes"] as HashSet<string>;
}

<h3 class="text-center">Car "@Model.Make @Model.Model"</h3>

<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <input asp-for="Id" hidden />
            <div class="form-group">
                <img src="~/Images/Cars/@Model.ImageUrl" width="200" height="200" id="imgElement" asp-append-version="true" />
            </div>
            <div class="form-group">
                <input type="file" asp-for="Image" class="form-control" id="inputElement" onchange="setSrc()" />
            </div>
            <div class="form-group">
                <label>Code</label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Code</label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Make</label>
                <select asp-for="Make" class="form-control">
                    @foreach (var make in makes)
                    {
                        <option>@make</option>
                    }
                </select>
                <span asp-validation-for="Make" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Model</label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Year Produced</label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Customer</label>
                <select asp-for="Customer" class="form-control">
                    @foreach (var customer in customers)
                    {
                        <option>@customer</option>
                    }
                </select>
                <span asp-validation-for="Customer" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary me-3" asp-action="Edit">Save Changes</button>
                <button type="submit" class="btn btn-danger"
                        asp-action="Delete" onclick="return confirm('Are you sure you want to delete this car?')">
                    Delete
                </button>
            </div>
        </form>
    </div>
</div>