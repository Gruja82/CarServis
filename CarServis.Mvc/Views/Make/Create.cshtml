@model MakeViewModel

<h3 class="text-center">New Make</h3>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <img width="200" height="200" id="imgElement" asp-append-version="true" />
            </div>
            <div class="form-group">
                <input type="file" asp-for="Image" class="form-control" id="inputElement" onchange="setSrc()" />
            </div>
            <div class="form-group">
                <label>Code</label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Country</label>
                <input asp-for="Country" class="form-control" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Web Site</label>
                <input asp-for="Web" class="form-control" />
            </div>
            <div class="form-group mt-4">
                <input type="submit" class="btn btn-primary" value="Create" />
            </div>
        </form>
    </div>
</div>